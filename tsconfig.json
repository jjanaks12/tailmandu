{
  "type": "module",
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "_moduleAliases": {
    "@/*": ["./src/*"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
