generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AddressType {
  BILLING
  SHIPPING
  PERMANENT_ADDRESS
}

enum PaymentType {
  NATIONAL
  INTERNATIONAL
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PaymentMethod {
  QR
  PAY_AT_VENUE
}

model Address {
  id      String @id @default(cuid())
  street  String
  address String
  city    String
  state   String
  zipCode String

  country_id String
  country    Country     @relation(fields: [country_id], references: [id], onDelete: Cascade)
  type       AddressType

  companies Company[]

  @@map("addresses")
}

model AgeCategory {
  id         String    @id @default(cuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  personal Personal[]

  @@map("age_categories")
}

model Checkpoint {
  id         String    @id @default(cuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  is_start   Boolean   @default(false)
  is_end     Boolean   @default(false)

  stage_category_id String
  stage_category    StageCategory @relation(fields: [stage_category_id], references: [id], onDelete: Cascade)

  runners                  EventRunner[]
  volunteers               Volunteer[]
  volunteer_on_checkpoints VolunteerCheckpoint[]

  @@map("checkpoints")
}

model Country {
  id         String    @id @default(cuid())
  name       String    @db.VarChar(255)
  abbr       String    @unique
  code       String    @db.VarChar(255)
  created_at DateTime  @default(now())
  updated_at DateTime?

  personal  Personal[]
  addresses Address[]

  @@map("countries")
}

model Company {
  id             String   @id @default(cuid())
  name           String
  short_name     String
  email          String
  address_id     String?
  address        Address? @relation(fields: [address_id], references: [id], onDelete: Cascade)
  phone          String
  vat_registered Boolean
  pan_no         String?
  vat_no         String?
  image_id       String?
  logo           Image?   @relation(fields: [image_id], references: [id], onDelete: Cascade)

  users User[]

  @@map("companies")
}

model Club {
  id          String    @id @default(cuid())
  name        String
  description String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  @@map("clubs")
}

model EventRunner {
  id                     String    @id @default(cuid())
  bib                    String
  created_at             DateTime  @default(now())
  updated_at             DateTime?
  deleted_at             DateTime?
  club_name              String    @default("")
  emergency_contact_name String    @default("")
  emergency_contact_no   String    @default("")
  want_lunch             Boolean   @default(false)

  personal_id       String
  personal          Personal      @relation(fields: [personal_id], references: [id], onDelete: Cascade)
  event_id          String
  event             TrailRace     @relation(fields: [event_id], references: [id], onDelete: Cascade)
  stage_category_id String
  stage_category    StageCategory @relation(fields: [stage_category_id], references: [id], onDelete: Cascade)
  stage_id          String
  stage             Stage         @relation(fields: [stage_id], references: [id], onDelete: Cascade)
  // shirt_id          String
  // tshirt_size       Size          @relation(fields: [shirt_id], references: [id], onDelete: Cascade)

  checkpoints              Checkpoint[]
  payments                 Payment[]
  volunteer_on_checkpoints VolunteerCheckpoint[]
  size                     Size?                 @relation(fields: [sizeId], references: [id])
  sizeId                   String?

  @@map("event_runners")
}

model Gender {
  id       String     @id @default(cuid())
  name     String
  personal Personal[]

  @@map("genders")
}

model Image {
  id          String    @id @default(cuid())
  file_name   String
  description String
  created_at  DateTime  @default(now())
  updated_at  DateTime?

  personal                Personal[]
  events                  TrailRace[]            @relation("thumbnail_image")
  maps                    TrailRace[]            @relation("map_image")
  companies               Company[]
  gallery_event           TrailRace[]            @relation("trail_race_gallery")
  thumbnail_stages        Stage[]                @relation("thumbnail_image")
  payments                Payment[]
  stage_categories        StageCategory[]        @relation("gpx_file")
  sponsort_types          SponsorType[]
  sponsors                Sponsor[]
  stage_category_payments StageCategoryPayment[]
  // stage_category_bibs     StageCategory[]        @relation("stage_category_bib")

  @@map("images")
}

model Newsletter {
  id            String    @id @default(cuid())
  email         String    @unique
  subscribed_at DateTime  @default(now())
  deleted_at    DateTime?

  user_id String?
  user    Personal? @relation(fields: [user_id], references: [id])

  @@map("newsletters")
}

model Permission {
  id          String    @id @default(cuid())
  name        String
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  roles Role[]

  @@map("permissions")
}

model Partner {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  events TrailRace[]

  @@map("partners")
}

model PartnerCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  @@map("partner_categories")
}

model Personal {
  id            String    @id @default(cuid())
  first_name    String?
  middle_name   String?
  last_name     String?
  email         String    @unique
  date_of_birth DateTime?
  phone_number  String?
  created_at    DateTime  @default(now())
  updated_at    DateTime?
  deleted_at    DateTime?

  country_id      String?
  country         Country?     @relation(fields: [country_id], references: [id], onDelete: Cascade)
  age_category_id String?
  age_category    AgeCategory? @relation(fields: [age_category_id], references: [id], onDelete: Cascade)
  size_id         String?
  size            Size?        @relation(fields: [size_id], references: [id], onDelete: Cascade)
  image_id        String?
  avatar          Image?       @relation(fields: [image_id], references: [id], onDelete: Cascade)
  gender_id       String?
  gender          Gender?      @relation(fields: [gender_id], references: [id])

  users       User[]
  volunteers  Volunteer[]
  runners     EventRunner[]
  newsletters Newsletter[]

  @@map("personals")
}

model Payment {
  id         String        @id @default(cuid())
  amount     Decimal
  method     PaymentMethod
  status     PaymentStatus @default(PENDING)
  created_at DateTime      @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  stage_category_id String
  stage_category    StageCategory? @relation(fields: [stage_category_id], references: [id])
  runner_id         String
  runner            EventRunner?   @relation(fields: [runner_id], references: [id])
  image_id          String?
  screenshot        Image?         @relation(fields: [image_id], references: [id])

  @@map("payments")
}

model Role {
  id          String    @id @default(cuid())
  name        String
  description String?
  publish     Boolean?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  permissions Permission[]
  users       User[]

  @@map("roles")
}

model Size {
  id          String    @id @default(cuid())
  name        String
  description String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  Personal Personal[]
  runners  EventRunner[]

  @@map("sizes")
}

model Sponsor {
  id          String    @id @default(cuid())
  name        String
  description String?
  url         String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  race_id       String?
  race          TrailRace?   @relation(fields: [race_id], references: [id], onDelete: Cascade)
  sponsorType   SponsorType? @relation(fields: [sponsorTypeId], references: [id])
  sponsorTypeId String?
  thumbnail_id  String?
  thumbnail     Image?       @relation(fields: [thumbnail_id], references: [id])

  @@map("sponsors")
}

model SponsorType {
  id          String    @id @default(cuid())
  name        String
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  sponsors Sponsor[]
  image    Image?    @relation(fields: [imageId], references: [id])
  imageId  String?

  @@map("sponsor_types")
}

model Stage {
  id          String    @id @default(cuid())
  name        String
  excerpt     String    @db.Text
  description String    @db.LongText
  location    String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  event_id  String
  event     TrailRace @relation(fields: [event_id], references: [id], onDelete: Cascade)
  image_id  String?
  thumbnail Image?    @relation("thumbnail_image", fields: [image_id], references: [id], onDelete: Cascade)

  runners          EventRunner[]
  volunteers       Volunteer[]
  stage_categories StageCategory[]

  @@map("stages")
}

model StageCategory {
  id          String    @id @default(cuid())
  name        String
  excerpt     String
  description String    @db.Text
  distance    String?
  difficulty  String?
  location    String
  start       DateTime?
  end         DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?
  bib_range   String    @default("0-0")

  stage_id    String
  stage       Stage   @relation(fields: [stage_id], references: [id], onDelete: Cascade)
  map_file_id String?
  map_file    Image?  @relation("gpx_file", fields: [map_file_id], references: [id], onDelete: Cascade)
  /**
   * image_id    String?
   * bib_image   Image?  @relation("stage_category_bib", fields: [image_id], references: [id], onDelete: Cascade)
   */

  checkpoints Checkpoint[]
  runners     EventRunner[]
  payment     StageCategoryPayment[]
  payments    Payment[]

  @@map("stage_categories")
}

model TrailRace {
  id          String    @id @default(cuid())
  name        String
  slug        String?
  start       DateTime
  end         DateTime
  excerpt     String?   @db.Text
  description String    @db.LongText
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  image_id    String?
  thumbnail   Image?  @relation("thumbnail_image", fields: [image_id], references: [id], onDelete: Cascade)
  map_file_id String?
  map_file    Image?  @relation("map_image", fields: [map_file_id], references: [id], onDelete: Cascade)

  stages    Stage[]
  runners   EventRunner[]
  galleries Image[]       @relation("trail_race_gallery")
  partners  Partner[]
  sponsors  Sponsor[]

  @@map("events")
}

model StageCategoryPayment {
  id         String      @id @default(cuid())
  amount     Decimal
  created_at DateTime    @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  type       PaymentType

  stage_category_id String
  stage_category    StageCategory @relation(fields: [stage_category_id], references: [id], onDelete: Cascade)
  image_id          String
  screenshot        Image         @relation(fields: [image_id], references: [id], onDelete: Cascade)

  @@map("stage_category_payments")
}

model User {
  id         String    @id @default(cuid())
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  personal_id String   @unique
  personal    Personal @relation(fields: [personal_id], references: [id], onDelete: Cascade)
  role_id     String?
  role        Role?    @relation(fields: [role_id], references: [id], onDelete: Cascade)
  Company     Company? @relation(fields: [companyId], references: [id])
  companyId   String?

  @@map("users")
}

model Volunteer {
  id          String    @id @default(cuid())
  description String    @db.Text
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  personal_id String
  personal    Personal @relation(fields: [personal_id], references: [id], onDelete: Cascade)

  stages      Stage[]
  checkpoints Checkpoint[]

  volunteer_on_checkpoints VolunteerCheckpoint[]

  @@map("volunteers")
}

model VolunteerCheckpoint {
  id            String      @id @default(cuid())
  timer         DateTime    @default(now())
  volunteer_id  String
  volunteer     Volunteer   @relation(fields: [volunteer_id], references: [id], onDelete: Cascade)
  runner_id     String
  runner        EventRunner @relation(fields: [runner_id], references: [id], onDelete: Cascade)
  checkpoint_id String
  checkpoint    Checkpoint  @relation(fields: [checkpoint_id], references: [id], onDelete: Cascade)

  @@map("volunteer_on_checkpoints")
}
